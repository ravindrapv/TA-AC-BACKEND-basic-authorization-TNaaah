<% include partials/header.ejs %>

    <main class="w-full">
        <section class="w-full h-full">
            <div class="w-full flex justify-between flex-wrap mt-10 ">
                <% allproducts.forEach((product)=> { %>
                    <div class=" w-3/12 border-2 m-10 py-5 px-10 leading-10 shadow-md">
                        <img class="w-full" src="<%=product.image  %> " alt="image tv">
                        <h2 class="text-2xl text-green-700 font-bold">
                            <%=product.name %>
                        </h2>
                        <p class="text-xl font-bold text-blue-500">Price : <%=product.price %>
                        </p>
                        <h3 class="text-red-500 font-bold">Quantity : <%= product.quantity %>
                        </h3>
                        <p>
                            <% product.likes ? product.likes : 0 %>
                        </p>
                        <a href="/admin/<%=product.id%>">
                            <button class="border-2  px-6 text-white font-bold rounded-lg bg-purple-300">Edit
                                Product</button>
                        </a>
                    </div>
                    <% }) %>
            </div>
        </section>
    </main>