<% include partials/header.ejs %>

    <main class="w-full m-10">
        <section class="w-full">
            <div class="w-3/12 border-2 py-5 px-10 leading-10 shadow-md">

                <img class="w-full" src="<%=eachproduct.image  %> " alt="image tv">
                <h2 class="text-2xl text-green-700 font-bold">
                    <%=eachproduct.name %>
                </h2>
                <p class="text-xl font-bold text-blue-500">Price : <%=eachproduct.price %>
                </p>
                <h3 class="text-red-500 font-bold">Quantitiy : <%= eachproduct.quantity %>
                </h3>
                <p>
                    <% eachproduct.likes ? eachproduct.likes : 0 %>
                </p>


                <!-- edit and delete -->
                <a href="/admin/<%=eachproduct.id%>/edit">
                    <button class="border-2  px-6 text-white font-bold rounded-lg bg-purple-300">Edit</button>
                </a>

                <a href="/admin/<%=eachproduct.id%>/delete">
                    <button class="border-2  px-6 text-white font-bold rounded-lg bg-red-500">Delete</button>
                </a>




            </div>
        </section>
    </main>